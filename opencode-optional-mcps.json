{
    "$schema": "https://opencode.ai/config.json",
    "mcp": {
        "hypertool": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@toolprint/hypertool-mcp@latest",
                "mcp",
                "run",
                "--mcp-config",
                "{env:HYPERTOOL_MCP_CONFIG_PATH}"
            ],
            "enabled": true
        }
    }
}
{
    "$schema": "https://opencode.ai/config.json",
    "plugin": [
        "./Overpowers/.opencode/plugin/Overpowers.js",
        "envsitter-guard"
    ],
    "mcp": {
        "serena": {
            "type": "local",
            "enabled": true,
            "command": [
                "uvx",
                "--from",
                "git+https://github.com/oraios/serena",
                "serena",
                "start-mcp-server",
                "--context",
                "ide-assistant"
            ]
        },
        "vibe_check": {
            "type": "local",
            "enabled": true,
            "command": [
                "node",
                "{env:VIBE_CHECK_PATH}"
            ],
            "environment": {
                "GEMINI_API_KEY": "{env:GEMINI_API_KEY}",
                "MCP_TRANSPORT": "stdio"
            }
        },
        "desktop-commander": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@wonderwhy-er/desktop-commander-mcp"
            ],
            "enabled": true
        },
        "hyperbrowser": {
            "type": "local",
            "enabled": true,
            "command": [
                "npx",
                "--yes",
                "hyperbrowser-mcp"
            ],
            "environment": {
                "HYPERBROWSER_API_KEY": "{env:HYPERBROWSER_API_KEY}"
            }
        },
        "genkit-mcp-server": {
            "type": "local",
            "enabled": true,
            "command": [
                "npx",
                "-y",
                "genkit-cli@^1.28.0",
                "mcp",
                "--explicitProjectRoot",
                "--no-update-notification",
                "--non-interactive"
            ]
        },
        "memcord": {
            "type": "local",
            "enabled": true,
            "command": [
                "{env:MEMCORD_PYTHON_PATH}",
                "-m",
                "memcord.server"
            ],
            "environment": {
                "PYTHONPATH": "{env:MEMCORD_SRC_PATH}",
                "MEMCORD_ENABLE_ADVANCED": "true"
            }
        },
        "semgrep": {
            "type": "local",
            "enabled": true,
            "command": [
                "node",
                "{env:SEMGREP_PATH}"
            ],
            "environment": {
                "PATH": "{env:SEMGREP_SYSTEM_PATH}"
            }
        },
        "in_memoria": {
            "type": "local",
            "enabled": true,
            "command": [
                "node",
                "{env:IN_MEMORIA_PATH}",
                "server"
            ]
        },
        "playwright_browser": {
            "type": "local",
            "enabled": true,
            "command": [
                "npx",
                "-y",
                "@playwright/mcp@latest"
            ]
        },
        "context7": {
            "type": "local",
            "enabled": true,
            "command": [
                "npx",
                "-y",
                "@upstash/context7-mcp"
            ],
            "environment": {
                "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
            }
        },
        "notebooklm": {
            "type": "local",
            "enabled": true,
            "command": [
                "uvx",
                "--from",
                "{env:NOTEBOOKLM_PATH}",
                "notebooklm-mcp"
            ]
        }
    }
}
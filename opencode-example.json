{
    "$schema": "https://opencode.ai/config.json",
    "plugin": [
        "./Overpowers/.opencode/plugin/Overpowers.js",
        "envsitter-guard"
    ],
    "mcp": {
        "serena": {
            "type": "local",
            "command": [
                "uvx",
                "--from",
                "git+https://github.com/oraios/serena",
                "serena",
                "start-mcp-server",
                "--context",
                "ide-assistant"
            ],
            "enabled": true,
        },
        "vibe_check": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@pv-bhat/vibe-check-mcp",
                "start",
                "--stdio"
            ],
            "environment": {
                "GEMINI_API_KEY": "YOUR_GEMINI_API_KEY"
            },
            "enabled": true,
        },
        "hypertool": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@toolprint/hypertool-mcp@latest",
                "mcp",
                "run",
                "--mcp-config",
                "/path/to/your/.mcp.json"
            ],
            "enabled": true,
        }
    }
}
# =============================================================================
# Overpowers MCP Configuration - Environment Variables
# =============================================================================
# Copy this file to .env and replace the placeholder values with your real
# API keys and local paths.
# =============================================================================

# --- API Keys ---
GEMINI_API_KEY='your_gemini_api_key_here'
HYPERBROWSER_API_KEY='your_hyperbrowser_api_key_here'
CONTEXT7_API_KEY='your_context7_api_key_here'

# --- MCP Server Paths ---
# vibe_check: path to the built index.js
VIBE_CHECK_PATH='~/.config/opencode/mcp/vibe-check/build/index.js'

# hypertool: path to your .mcp.json config
HYPERTOOL_MCP_CONFIG_PATH='/path/to/your/.mcp.json'

# memcord: python binary inside the venv, and src path
MEMCORD_PYTHON_PATH='~/.config/opencode/mcp/memcord/.venv/bin/python'
MEMCORD_SRC_PATH='~/.config/opencode/mcp/memcord/src'

# semgrep: path to the built index.js and system PATH override
SEMGREP_PATH='~/.config/opencode/mcp/semgrep/build/index.js'
SEMGREP_SYSTEM_PATH='/usr/local/bin:/usr/bin:/bin:~/.local/bin'

# in_memoria: path to the built index.js
IN_MEMORIA_PATH='~/.config/opencode/mcp/in-memoria/dist/index.js'

# notebooklm: path to the local package
NOTEBOOKLM_PATH='~/.config/opencode/mcp/notebooklm-mcp-cli'

# --- Extracted User Variables ---
MCP_TRANSPORT=''
MEMCORD_ENABLE_ADVANCED=''
